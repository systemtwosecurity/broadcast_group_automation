{
  "name": "broadcast-group-automation",
  "version": "2.0.0",
  "description": "Automate group and source creation with smart state tracking",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:copy-files",
    "build:copy-files": "cp src/database/schema.sql dist/database/",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "server": "tsx src/server.ts",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "setup:playwright": "npx -y @modelcontextprotocol/server-playwright --version"
  },
  "keywords": [
    "automation",
    "mcp",
    "playwright",
    "security"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.10.0",
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^4.17.23",
    "@types/node": "^22.18.9",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

